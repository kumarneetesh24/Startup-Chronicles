<div class="page-header">
  <h1>My Articles</h1>
</div>
<% if session[:user_name] %>
	<% ses= session[:user_name] %>
	<%= link_to("#{ses}",{:controller =>'admin'}, :class =>"action" )%>
<%else %>
	<%=link_to("login",{:controller =>'access'}, :class =>"action" )%>
<% end %>
<%=link_to("about_us",{:action => 'about_us'}, :class =>"action" )%>
<%=link_to("contact_us",{:action => 'contact_us'}, :class =>"action" )%>
<div id="my-articles">
<% @public.each do |article| %>
<%= link_to( article.title,{:action => 'show', :id => article.id}, :class => 'action show')%>
 <small><em><%= article.timestamp %></em></small>

  <p><%= truncate(strip_tags(article.body), length: 600) %></p>
</div>
<% end %>


<div id="infinite-scrolling">
  <%= will_paginate %>
</div>