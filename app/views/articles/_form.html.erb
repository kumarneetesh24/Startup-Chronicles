<%= error_msg(@articles) %>
<div summary="Article form fields" class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="form-group row">
        <div class="col-xs-3"><%= f.label(:title, 'title:',:class=>"h6") %></div>
        <div class="col-xs-8"><%= f.text_field :title,:placeholder=>"enter title" ,:class=>"form-control" %></div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3"><%= f.label(:position, 'position:',:class=>"h6") %></div>
        <div class="col-sm-5"><%= f.select(:position,1..@articles_count,:class=>"form-control") %></div>
      </div>
      <%= f.fields_for :article_images do |builder| %>
        <% if builder.object.new_record? %>
        <div class="form-group row">
          <div class="col-sm-3"><%= builder.label :photo, "Image:",:class=>"h6 demo-heading-note" %></div>
          <div class="col-sm-5"><%= builder.file_field :photo,:class=>"form-control" %></div>
        </div>
        <% end %> 
      <% end %>
      <div class="form-group row">
        <div class="col-sm-3"><%= f.label(:body , 'body:',:class=>"h6") %></div>
        <div class="col-sm-8"><%= f.text_area(:body,:size => '80x10',:placeholder=>"enter body",:class=>"form-control" ) %></div>
      </div>
      <div class="form-group row">
        <div class="col-sm-3"><%= f.label(:created_at , 'created at:',:class=>"h6") %></div>
        <div class="col-sm-8"><%= f.datetime_select :created_at,:class=>"form-control"%></div>
      </div>
      <div class="form-group row">
         <div class="col-sm-3"><%= f.label(:visible , 'visible:',:class=>"h6") %></div>
          <div class="col-sm-3"><%= f.check_box(:visible,:class=>"custom-checkbox") %></div>
      </div>
    </div>
    </div>