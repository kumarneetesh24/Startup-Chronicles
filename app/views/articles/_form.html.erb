<div class="text-center" style="color:red"><%= error_msg(@articles) %></div>
<div summary="Article form fields" class="row">
    <div class="col-sm-12 ">
      <div class="form-group row">
        <div class="col-xs-2"><%= f.label(:title, 'title:',:class=>"h6") %></div>
        <div class="col-xs-8"><%= f.text_field :title,:placeholder=>"enter title" ,:class=>"form-control" %></div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"><%= f.label(:position, 'position:',:class=>"h6") %></div>
        <div class="col-sm-5"><%= f.select(:position, 1..@articles_count ,:class=>"form-control") %></div>
      </div>
  <div class="form-group row">
        <div class="col-xs-2"><%= f.label(:thumb, 'thumbnail:',:class=>"h6") %></div>
        <div class="col-xs-8"><%= f.file_field :thumb ,:class=>"form-control" %></div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"><%= f.label(:body , 'body:',:class=>"h6") %></div>
        <div class="col-sm-10"><%= f.cktext_area :body, :size => '20x20' ,:placeholder=>"enter body",:ckeditor => {:toolbar => 'Full'},:class=>"form-control"  %></div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"><%= f.label(:created_at , 'created at:',:class=>"h6") %></div>
        <div class="col-sm-8"><%= f.datetime_select :created_at,:class=>"form-control"%></div>
      </div>
      <div class="form-group row">
         <div class="col-sm-2"><%= f.label(:visible , 'visible:',:class=>"h6") %></div>
          <div class="col-sm-3"><%= f.check_box(:visible,:class=>"custom-checkbox") %></div>
      </div>
    </div>
    </div>